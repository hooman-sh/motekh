@import "variables"

.card
.uk-card
	margin 0 auto
	box-shadow 0px 0px 6px rgba(0, 0, 0, 0.25)
	background-color #fff

	*+&
		// @media (min-width $xs + 1)
		margin-top 1.4rem

	&__heading
		background-color rgb(242,242,242)
		border-bottom solid 1px #e8e8e8

		font-weight 600
		font-size .9rem
		text-align right
		line-height 1.4

		margin 0
		padding .6rem 1rem

		color $black1

		// @media (max-width $xs)
			// border-top 1px solid #e8e8e8

		&--bw
			padding-top .45rem
			padding-bottom .45rem
			border-top solid 1px #e8e8e8

		/ .c-h--icon
			display flex
			justify-content space-between
			align-items center

			> *
				display table-cell
				vertical-align middle

		/ .c-h__icon
			color $color

			&:hover
				color darken($color, 20%)

	&__footer
	/.uk-card-footer
		border-top solid 1px rgb(232,232,232)

		~/--projects &
			padding 20px
			margin-top 20px

			display flex
			align-items center
			text-align center
			justify-content center

	&__body
		line-height 1.3
		padding 40px

		@media (max-width 639px)
			padding 20px

		&--media
			padding 25px

		&--md
			padding 30px

			@media (max-width 639px)
				padding 15px

		&--sm
			padding 20px

			@media (max-width 639px)
				padding 10px

	&__avatar
		overflow hidden
		border-radius 50%
		margin 0 auto
		width 40px
		height 40px

		img
			display block
			background-color #fff

		.offers &
		.customers &
			width 40px
			height 40px
			margin-left .65rem

			/.customers__link:hover
			/.customers__link:focus
				text-decoration none

		.settings &
			width 180px
			height 180px
			display flex
			align-items center
			justify-content center
			padding 1rem
			cursor pointer
			background-origin content-box
			background-clip content-box

		~/--profile &
			width 120px
			height 120px
			margin-bottom 1rem

	&__title
		font-weight 600
		font-size 1rem
		color $black1

	&__sub
		font-weight 500
		font-size .8rem
		color $black3

		margin .4rem 0 0
		line-height 1.8

	&__textarea
	&__textarea.uk-textarea
		max-height 10rem
		min-height 6rem
		min-width 100%
		font-size .85rem
		line-height 1.7

	&__price
		font-size .8rem
		color $black2

		strong
			font-size 1.2rem
			font-weight 900

			color $black1
			margin .35rem 0

	&__desc
		margin 1rem 0 -.2rem
		line-height 2
		font-size .85rem
		color $black2
		text-align initial

		overflow-wrap break-word
		word-wrap break-word

	&__info

		&--column
			display flex
			align-items right
			flex-direction column
			text-align initial

			div + div
				margin-top .6rem

			> div
				color $black3
				font-weight 100
				font-size .8rem

				+ div
					font-weight 600
					font-size .9rem
					color $black1
					line-height 1.7

			& + &
				margin-top .8rem
				padding-top .8rem
				border-top 1px solid #eee

		&--row
			width 100%
			display table
			font-size .85rem

			> *
				display table-cell
				vertical-align middle

			& + &
				margin-top 1rem

				.settings &
					margin-top 1.6rem

		/ .c-info__icon
			padding-left .5rem
			color rgb(188,189,191)

			&:only-child
				float right

	&__btn
		display block
		outline none
		border none
		font-size .9rem
		font-weight 900
		color $color
		cursor pointer
		padding .5rem .85rem
		background rgba(0,0,0,0)
		text-align center

		&--footer
			display block
			width 100%
			margin 0

			border-top 1px solid #eee

		&:hover
			color darken($color, 40%)
			text-decoration none

		&[disabled]

			&:hover
				color $color

	&__date
		color $black3
		font-weight 100
		font-size .75rem

	&__badge
		padding .2rem
		line-height 1.8
		border-radius 4px
		text-align center
		background-color $color
		color #fff
		font-size .8rem
		font-weight 400

	.rating2
		label
			&:before
				margin 0 .15rem
				font-size 1rem

	// @sizing
	&--md
		max-width 48rem

		&.card__body
		& .card__body
			padding 30px

			@media (max-width 639px)
				padding 15px

	&--sm
		max-width 33rem

		@media (max-width $xs)
			max-width none

		&.card__body
		& .card__body
			padding 20px

			@media (max-width 639px)
				padding 10px

	&--footer-btn
		.card__body
			&
			^[1]^[2..-1]
				padding-bottom 0

	&--gallery

		/.gallery

			&__inner
				padding 1rem
				height 14rem
				overflow-x hidden
				overflow-y auto

			&__item
				display flex
				align-items center
				justify-content center

				width 120px
				height 100px
				margin 0 auto

				overflow hidden
				border-radius 4px

				position relative

			&__overlay
				position absolute
				bottom 0
				left 0
				right 0
				padding .5rem
				background-color rgba(255, 255, 255, .45)
				transform translate(0, 100%)
				transition .25s ease-out

				^[-1]__item:hover &
				^[-1]__item:focus &
					transform translate(0, 0)

	&--projects

		.card
			position relative
			height 100%
			display flex
			align-items center

			> div
				flex 1 1 0

	/.profile__pics
		padding 10px

	/.profile-pics__item
			display flex
			align-items center
			justify-content center
			overflow hidden
			height 90px

	/.comments

		&__inner
			@extend .gallery__inner
			&.card__body--sm
				height auto
				max-height 14rem

		&__item
			padding-left 1rem
			& + &
				margin-top .7rem

		&__header
			display flex
			justify-content space-between
			align-items center
			font-weight 600
			font-size 1rem

		&__body
			font-size .75rem
			margin-top .4rem
			color $black3

	&--disabled
		opacity .7
		transform scale(.99)
		transition .1s linear

		&:hover
		&:focus
			opacity 1
			transform scale(1)

