@import "variables"

// Custom font
@font-face
  font-family 'jopp'
  src url(icomoon-font-path + '/jopp.eot?i318v7')
  src url(icomoon-font-path + '/jopp.eot?i318v7#iefix') format('embedded-opentype'), url(icomoon-font-path + '/jopp.ttf?i318v7') format('truetype'), url(icomoon-font-path + '/jopp.woff?i318v7') format('woff'), url(icomoon-font-path + '/jopp.svg?i318v7#jopp') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
