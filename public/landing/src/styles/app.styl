@import 'variables'

*
*:after
*:before
	font-family inherit
	box-sizing inherit

html
	box-sizing border-box

	line-height 1.7

	font-family IRANSans
	font-size 16px

	color $black1

	@media (max-width $xl - 1)
		font-size 15px

	@media (max-width $lg - 1)
		font-size 14px

	@media (max-width $md - 1)
		font-size 13px

	@media (max-width $sm - 1)
		font-size 12px

	&.mm-right.mm-opening .mm-menu.mm-opened~#landing__inner.mm-slideout
		position fixed

	&[class*='pages']
	&.validation
	&.signup
	&.login
	&.signupCustomer
		background-color #f2f2f2

	&.mm-background .mm-page
		background-color rgba(0,0,0,0)

body
	background rgba(0,0,0,0)

.page
	background-color #fff

.border-bott
	padding-bottom 2%
	border-bottom thin solid lightgray

.owl-carousel.owl-hidden
	opacity 1 !important

.dropdown-menu
.ui-select-bootstrap>.ui-select-match>.btn
	text-align initial!important

// @focus
	.howitworks
	.features

		&:focus

			outline none


img.lazy__img
	opacity 1
	transition opacity .3s

	&[data-src]
		opacity 0

// @crisp
.crisp-client .crisp-6k5puw
.crisp-client .crisp-6k5puw[dir=rtl]
.crisp-client .crisp-6k5puw[dir=rtl] .crisp-561mbi
.crisp-client .crisp-6k5puw[dir=rtl] .crisp-561mbi *
.crisp-client .crisp-6k5puw[dir=rtl] .crisp-1hzjrty
.crisp-client .crisp-6k5puw[dir=rtl] .crisp-1hzjrty *
.crisp-client .crisp-6k5puw .crisp-561mbi
.crisp-client .crisp-6k5puw .crisp-561mbi *
	font-family IRANSans !important

.crisp-client .crisp-6k5puw[dir=rtl] .crisp-1hzjrty ::-webkit-input-placeholder
.crisp-client .crisp-6k5puw[dir=rtl] .crisp-1hzjrty::-webkit-input-placeholder
	font-family IRANSans !important

input
textarea
button
	direction rtl

.settings

	.card__avatar img
		cursor pointer

.uk-container

	&--md
		max-width 1000px

[ng-click]
	cursor pointer

.projects
	.uk-grid
		>div:nth-child(n+4)
			margin-top 30px

.crisp-client .crisp-1[dir=rtl]
	font-family inherit

.verify
	max-width 470px
	border 1px solid #eee
	border-radius 4px

	&__wrapper
		display flex
		height 100%
		width 100%
		align-items center
		justify-content center

	&__inner
		padding 2rem

.uk-flex-column--s
	display flex
	align-items center
	justify-content center
	flex-direction row-reverse
	text-align center

	@media (min-width 640px)
		div:nth-child(2)
			margin-left 7px

	@media (max-width 639px)
		flex-direction column

		div:nth-child(2)
			margin-top 5px

.nav
.pagination
.carousel
.panel-title a
.rating label
	cursor pointer

input[class*='uk']
	&
	&:focus
		outline none

.tooltip
	font-family inherit

	.card__close  &
		white-space nowrap

.page--empty
	height 100%
	width 100%
	display table

	> *
		display table-cell
		vertical-align middle

.el--loader
	position relative
	&:after
		content ''
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		background unquote("url(data:image/svg+xml;base64,)") center center / 120px no-repeat alpha(#fff, 60%)

@keyframes load8 {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
button[promise-btn]
	display inline-flex
	align-items center
	justify-content center

.btn
	&-loader
		margin 0 0 0 -1rem
		opacity 0
		font-size 10px
		position relative
		text-indent -9999em
		border-top .2rem solid rgba(0,0,0,.25)
		border-right .2rem solid rgba(0,0,0,.25)
		border-bottom .2rem solid rgba(0,0,0,.25)
		border-left .2rem solid #999
		transform translateZ(0)
		animation load8 1.1s infinite linear
		transition .15s ease
		&
		&:after
			border-radius 50%
			width 1rem
			height 1rem
		.is-loading &
			margin 0 10px 0 -7px
			opacity 1
			

@import "../components/**/*.styl"