@import '../../styles/variables'
$grey = #666666

.main-footer
	color $grey
	padding 3rem 2rem

	@media (max-width $md - 1)
		padding 2rem 1rem

.footer

	&__inner
		display flex
		align-items center
		justify-content space-around

		flex-direction row
		flex-wrap wrap

	&__col
		&--social
			order 1

		&--copyright
			order 2

		&--contact
			order 3

		@media (min-width $md)
			max-width 33.333333%
			flex 0 0 33.333333%

	@media (max-width $md - 1)

		&__inner
			flex-direction column

		&__col
			margin-bottom 1rem
			text-align center

			&--social
				order 2

			&--copyright
				order 3

			&--contact
				order 1

	&-link
		padding-top .5rem
		text-align center

		&__item
			padding 0 1rem .2rem
			margin 0 .5rem

			display inline-block
			font-size 1rem
			font-weight 900
			line-height 2

			color $grey
			border-bottom 2px solid rgba(0,0,0,0)

			&
			&:hover
			&:focus
				text-decoration none

			&:hover
				color $color
				border-bottom-color $color
				text-shadow 0 0 10px rgba(0,0,0,.1)

.social
	display flex
	align-items center
	justify-content center

	padding-top .5rem

	@media (max-width $md - 1)
		margin-bottom 1rem

	&__link
		display block

		padding 0 .25rem
		margin 0 .25rem

		color $grey
		text-decoration none

		&:hover
			color $color
			text-shadow 0 0 10px rgba(0,0,0,.1)


.copyright
	text-align center

	&__logo
		margin-bottom 1rem

		svg
			height 3rem

	&__text
		font-weight 100
		font-size 1.1rem
