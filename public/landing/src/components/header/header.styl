@import '../../styles/variables'

#home-menu
#profile-menu
	&:not(.mm-menu)
		display none

.main-header
	position fixed
	top 0
	left 0
	right 0

	z-index 500

	padding 1rem

	transition .15s linear

.header
	&--active
	&--sm&--active
		padding .55rem 1rem

	&--sm
		padding .4rem 1rem
		background-image linear-gradient(to bottom, rgba(0,0,0,.8) -60%, rgba(0,0,0,0))
		&^[0]--active
			background-image linear-gradient(to bottom, rgba(0,0,0,0) -60%, rgba(0,0,0,0))

	&--active
		background-color alpha(#212121, 80%)

	&__inner
		display flex

		flex-direction row
		justify-content space-around
		align-items center

		/.hamburger
			padding .5rem

			&-box
				height 24px

		/.hamburger-inner
		/.hamburger-inner::before
		/.hamburger-inner::after
			background-color #fff
			height 2px
			box-shadow 0 0 2px rgba(0,0,0,.3),
								 0 0 8px rgba(0,0,0,.1)

			&
			/.hamburger-box
				width 30px

.nav
	width 40%
	flex 1 1 40%

	h1
		margin 0
		font-size 1rem

	@media (max-width: $lg - 1)
		display none

	@media (min-width $lg)
		&__opener
			display none

	&__opener
		flex 0 0 auto
		color #fff

		&
		> *
			height 100%

		*
			vertical-align middle

		button
			display table

			color #fff

			text-shadow 0 0 10px rgba(0,0,0,.25)

			i
				display table-cell
				vertical-align middle

			&
			&:focus
				outline none

	&.mm-menu
		text-align right

	&__list
		display flex
		flex-direction row
		align-items center
		justify-content space-around
		padding 0
		margin 0

		flex 1 0 auto

	&__item
		flex 1 0
		text-align center

	&__link
		position relative

		display inline-block
		padding .2rem 1.2rem

		color #fff
		border-bottom-color #fff

		font-size .9rem
		font-weight 600

		line-height 2

		text-decoration none

		text-shadow  unquote("0px 0px 5px rgba(0,0,0,0.2),
													0px 1px 3px rgba(0,0,0,0.7),
													0px 5px 13px rgba(0,0,0,0.1),
													0px 15px 23px rgba(0,0,0,0.1)")

		cursor pointer
		outline none
		border none

		white-space nowrap

		&:after
			content ''
			position absolute

			left 30%
			right 30%
			bottom -2px

			opacity 0

			border-radius 5px

			height 2px
			background-color #fafafa

			box-shadow unquote("0px 1px 3px rgba(0,0,0,0.7),
													0px 5px 13px rgba(0,0,0,0.1),
													0px 15px 23px rgba(0,0,0,0.1)")

			transition .1s linear

		&:focus
		&:hover
		&:active
			color #fff
			text-decoration none
			outline none

		&:hover
		&:active
			background-color rgba(0,0,0,0)

		&:hover:after
		&:focus:after
			left 20%
			right 20%

			opacity 1

		&:active:after
			left 12%
			right 12%

			opacity 1

		&--primary
			border 1px solid #28AAE1
			border-radius .8rem

			background-color rgba(0,0,0,0)

			transition .15s ease

			&:hover
				background-color #28AAE1

			&:focus
				background-color alpha(#28AAE1, 40%)

			&:after
				content none


// @logo
.logo
	text-align center
	user-select none

	a
		outline none

	h1
		margin 0

	a
		display table
		margin 0 auto

		max-width 100%


		svg
			display table-cell
			vertical-align middle
			transition .15s ease

			width 130px
			height 60px

			filter: unquote("progid:DXImageTransform.Microsoft.Dropshadow(OffX=0, OffY=0, Color='#bababa')
				progid:DXImageTransform.Microsoft.Dropshadow(OffX=0, OffY=1, Color='#bababa')
				progid:DXImageTransform.Microsoft.Dropshadow(OffX=0, OffY=2, Color='#bababa')")
			-ms-filter: unquote("drop-shadow(0 1px 1px rgba(0,0,0,.5)) drop-shadow(0 1px 6px rgba(0,0,0,.1))")
			filter: unquote("drop-shadow(0 1px 1px rgba(0,0,0,.5)) drop-shadow(0 1px 6px rgba(0,0,0,.1))")

			.header--active &
				width 90px
				height 42px
				filter none

	@media (max-width: $xl - 1)
		margin 0 1rem

		a svg
			width 125px
			height 58px

	@media (max-width: $lg - 1)
		flex 1 1 auto
		margin 0 0 0 6rem

		a svg
			width 110px
			height 51px

		.header--active svg
			width 100px
			height 46px

	@media (max-width: $md - 1)
		a svg
			width 100px
			height 46px

		.header--active a svg
			width 90px
			height 42px

	@media (min-width: $xl)
		width 300px
		flex 1 0 300px
